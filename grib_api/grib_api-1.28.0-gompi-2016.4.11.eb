    ('Python', '2.7.14'),
    ('netCDF', '4.4.1.1'),
    ('JasPer', '1.900.1'),
]

configopts  = '--with-jasper=$EBROOTJASPER/lib'
configopts += '--with-netcdf=$EBROOTNETCDF '
configopts += '--with-python '

parallel = 1

moduleclass = 'data'

