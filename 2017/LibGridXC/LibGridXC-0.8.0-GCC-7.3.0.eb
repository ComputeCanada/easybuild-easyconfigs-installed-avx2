easyblock = 'ConfigureMake'

name = 'LibGridXC'
version = '0.8.0'

homepage = 'https://launchpad.net/libgridxc'
description = "A library to compute the exchange and correlation energy and potential in spherical (i.e. an atom) or periodic systems. It is based on SiestaXC."

toolchain = {'version': '7.3.0', 'name': 'GCC'}

sources = [SOURCELOWER_TGZ]
source_urls = ['https://launchpad.net/%(namelower)s/trunk/%(version_major_minor)s/+download']

dependencies = [
    ('libxc', '3.0.0'),
]

prebuildopts = "cd %(builddir)s/%(namelower)s-%(version)s/ && mkdir -p build && cd build && sh ../src/config.sh && cp ../extra/fortran.mk . && "
buildopts = "FC_SERIAL=gfortran LIBXC_ROOT=$EBROOTLIBXC PREFIX=%(installdir)s/"

parallel = 1

skipsteps = ['configure', 'install']

sanity_check_paths = {
    'files': ['lib/libGridXC.a', 'gridxc.mk', 'libxc.mk'],
    'dirs': ['lib', 'include'],
}

moduleclass = 'lib'
