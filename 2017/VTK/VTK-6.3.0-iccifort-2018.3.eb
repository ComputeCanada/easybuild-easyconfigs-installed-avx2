preinstallopts = ['mkdir -p %(installdir)s/lib/python2.7/site-packages/ && ']

modextrapaths = {'CPATH': 'include/%(namelower)s-%(version_major_minor)s', 'EBPYTHONPREFIXES': ''}

sanity_check_paths = {
    'files': ['bin/vtkEncodeString-%(version_major_minor)s'],
    'dirs': ['include/%(namelower)s-%(version_major_minor)s'],
}

moduleclass = 'vis'

