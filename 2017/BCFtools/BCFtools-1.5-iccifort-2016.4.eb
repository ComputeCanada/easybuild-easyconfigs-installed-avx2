    'mkdir -p %(installdir)s/lib/plugins',
    'cp -a plugins/*.so %(installdir)s/lib/plugins/.',
]

sanity_check_paths = {
    'files': ['bin/%s' % x for x in ['bcftools', 'plot-vcfstats', 'vcfutils.pl']],
    'dirs': ['lib/plugins'],
}

