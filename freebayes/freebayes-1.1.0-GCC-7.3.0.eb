# $ mv freebayes freebayes-1.1.0
# $ tar -czf freebayes-1.1.0.tar.gz freebayes-1.1.0
#
sources = [SOURCELOWER_TAR_GZ]

builddependencies = [
    ('CMake', '3.2.1'),
]

