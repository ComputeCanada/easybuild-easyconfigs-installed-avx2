    ('Python', '3.11'),
    ('SciPy-Stack', '2023b'),
    ('CFITSIO', '4.3.0'),
    ('METIS', '5.1.0'),
    ('SuiteSparse', '7.6.0'),
    ('tbb', '2021.10.0'),
]

