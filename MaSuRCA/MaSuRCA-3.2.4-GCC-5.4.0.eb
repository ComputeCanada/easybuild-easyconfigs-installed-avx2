    ('libreadline', '6.3'),
    ('Tcl', '8.6.5'),
    ('Boost', '1.60.0'),
    ('zlib', '1.2.8'),
]

buildopts = "install-special"
start_dir = "global-1"

sanity_check_paths = {
    'files': ['bin/masurca'],
    'dirs': ['include', 'lib'],
}

moduleclass = 'bio'

