    ('wxPython', '4.1.0', {
        'easyblock': 'PythonPackage',
        'modulename': 'wx',
        'source_tmpl': '%(name)s-%(version)s.tar.gz',
        'source_urls': ['https://pypi.python.org/packages/source/w/wxPython'],
