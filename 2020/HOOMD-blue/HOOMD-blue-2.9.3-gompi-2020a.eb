configopts += '-DCMAKE_INSTALL_PREFIX=%(installdir)s/lib/python3.8/site-packages '

parallel = 8

runtest = ' && ctest'

sanity_check_paths = {
    'files': ['lib/python3.8/site-packages/hoomd/__init__.py'],
    'dirs': []
}

modextrapaths = {'PYTHONPATH': 'lib/python3.8/site-packages'}
moduleclass = 'phys'

