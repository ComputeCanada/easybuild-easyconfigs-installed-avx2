easyblock = 'CMakeMake'

name = 'HOOMD-blue'
version = '2.9.3'

homepage = 'http://glotzerlab.engin.umich.edu/hoomd-blue/'
description = """HOOMD-blue is a general-purpose particle simulation toolkit for both
