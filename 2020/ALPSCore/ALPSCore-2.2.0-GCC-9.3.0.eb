# * https://github.com/ALPSCore/ALPSCore/issues/290#issuecomment-280447517

dependencies = [
    ('Boost', '1.72.0'),
    ('HDF5', '1.8.22'),
    ('Eigen', '3.3.7'),
]

configopts  = '-DEIGEN3_INCLUDE_DIR=$EBROOTEIGEN/include '

separate_build_dir = True

