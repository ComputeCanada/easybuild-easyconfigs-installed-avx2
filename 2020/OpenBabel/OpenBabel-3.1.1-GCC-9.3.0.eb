#    	'prebuildopts': 'PKG_CONFIG_PATH=%(installdir)s/lib/pkgconfig:$PKG_CONFIG_PATH ',
	'buildcmd':  'build_ext',
	'buildopts': ' -I%(installdir)s/include/openbabel3 -L%(installdir)s/lib ',
