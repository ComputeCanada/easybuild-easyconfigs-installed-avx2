    ('CMake', '3.16.4'),
    ('SWIG', '4.0.1'),
]
dependencies = [
    ('zlib', '1.2.11'),
    ('libxml2', '2.9.10'),
    ('Eigen', '3.3.7', '', True),
    ('RapidJSON', '1.1.0'),
    ('cairo', '1.16.0'),          # optional: for .png output
    ('Boost.Serial', '1.72.0'),   # optional: for Maestro formats
