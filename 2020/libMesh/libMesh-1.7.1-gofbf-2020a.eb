configopts += " --with-nlopt-include=$EBROOTNLOPT/include --with-nlopt-lib=$EBROOTNLOPT/lib "
configopts += " --with-curl-include=$EBROOTGENTOO/include/curl --with-curl-lib=$EBROOTGENTOO/lib "
configopts += " --with-tbb=$EBROOTTBB/tbb "

